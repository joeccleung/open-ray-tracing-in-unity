#ifndef RAY_COMPUTE
#define RAY_COMPUTE

/*
The Ray structure
- The data fields has to match with RTRay.cs
*/

struct Ray
{
    float3 color;
    float3 origin;
    float3 direction;
    float tmin;
    float tmax;
    int medium;
    float weight;
    uint gen;
};

Ray EmptyRay();

Ray CreateRay(float3 origin, float3 direction, uint gen)
{
    Ray ray = EmptyRay();
    ray.gen = gen;
    ray.origin = origin;
    ray.direction = normalize(direction);
    ray.tmax = 1.#INF;
    ray.tmin = 0.00001f;
    ray.medium = 0;
    return ray;
}

Ray EmptyRay()
{
    Ray ray;
    ray.color = float3(0, 0, 0);
    ray.gen = 1;
    ray.origin = float3(0, 0, 0);
    ray.direction = float3(0, 0, 0);
    ray.tmin = -1 * 1.#INF;
    ray.tmax = 1.#INF;
    ray.weight = 0;
    ray.medium = 0;
    return ray;
}

float3 GetPoint(Ray ray, float distance)
{
    return ray.origin + ray.direction * distance;
}

#endif  // RAY_COMPUTE
